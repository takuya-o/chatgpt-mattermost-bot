{
  "extends": "ts-node/node16/tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "sourceMap": true,
    "rootDir": "src",
    "moduleResolution": "node",
    "lib": ["DOM"],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "outDir": "dist"
  },
  "ts-node": {
    "esm": true,
    "compilerOptions": {
      "module": "NodeNext",
    }
  },
  "include": ["src"],

  "exclude": ["node_modules"]
}