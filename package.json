{
  "name": "chatgpt-mattermost-bot",
  "version": "2.1.2",
  "description": "ChatGPT bot on mattermost",
  "private": true,
  "keywords": [
    "chatgpt",
    "bot",
    "ai",
    "openai",
    "mattermost"
  ],
  "main": "dist/botservice.mjs",
  "type": "module",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/takuya-o/chatgpt-mattermost-bot/issues"
  },
  "homepage": "https://github.com/takuya-o/chatgpt-mattermost-bot#readme",
  "files": [
    "dist**/*"
  ],
  "scripts": {
    "production": "node ./dist/botservice.mjs",
    "upgrade": "npx --yes npm-check-updates -u && npm update && npm dedup",
    "clean": "rm -rf .npm/ node_modules/ dist/*; npm ci",
    "build": "rimraf dist && node esbuild.config.js",
    "lint": "eslint src --ext ts && prettier -c src && tsc --noEmit",
    "format": "prettier --write src",
    "test": "echo 'There is no vitest'",
    "start": "ts-node ./src/botservice.ts",
    "build-test": "tsc"
  },
  "dependencies": {
    "@mattermost/client": "^7.10.0",
    "@mattermost/types": "^7.10.0",
    "debug-level": "3.0.0",
    "form-data": "^4.0.0",
    "isomorphic-fetch": "^3.0.0",
    "node-fetch": "^3.3.2",
    "openai": "^3.3.0",
    "tiktoken-node": "^0.0.6",
    "ws": "^8.13.0"
  },
  "devDependencies": {
    "@swc/core": "^1.3.77",
    "@types/isomorphic-fetch": "^0.0.36",
    "@types/node": "^20.5.0",
    "@types/node-fetch": "^2.6.4",
    "@types/ws": "^8.5.5",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "esbuild": "^0.19.2",
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "prettier": "^3.0.2",
    "rimraf": "^5.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6",
    "vitest": "^0.34.1"
  },
  "engineStrict": true,
  "engines": {
    "npm": ">=8.0.0",
    "node": ">=16.0.0 <=20"
  }
}
